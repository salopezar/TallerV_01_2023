#ifndef RTCXDRIVER_H_
#define RTCXDRIVER_H_
#include "stm32f4xx.h"

#define MONDAY 			0x1
#define TUESDAY 		0x2
#define WEDNESDAY		0X3
#define THURSDAY		0x4
#define FRIDAY			0X5
#define SATURDAY		0x6
#define SUNDAY			0x7

#define AM				0
#define PM				1

#define RTC_AMPM		1
#define RTC_24H			0

typedef struct
{
	uint8_t  RTC_Hours;
	uint8_t  RTC_Minutes;
	uint8_t  RTC_Seconds;
	uint8_t  RTC_Days;
	uint8_t  RTC_Months;
	uint16_t  RTC_Years;
	uint8_t	 RTC_Wdu;
	uint8_t  RTC_AmPm;

}RTC_Handler_t;

void config_RTC(RTC_Handler_t *ptrRTCHandler);
uint8_t* readTime(void);
uint8_t* readDate(void);
#endif /* RTCXDRIVER_H_ */

